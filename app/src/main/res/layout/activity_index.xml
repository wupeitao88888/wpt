<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/com.flyco"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v4.view.ViewPager
        android:id="@+id/content_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tabhost"
        android:background="@color/bg"></android.support.v4.view.ViewPager>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        tl:tl_iconHeight="24dp"
        tl:tl_iconMargin="0dp"
        tl:tl_iconWidth="24dp"
        tl:tl_textSelectColor="#278CFC"
        tl:tl_textUnselectColor="#333333"
        tl:tl_textsize="10sp">


    </com.flyco.tablayout.CommonTabLayout>


</RelativeLayout>