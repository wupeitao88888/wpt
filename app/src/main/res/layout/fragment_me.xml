<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <co.baselib.widget.MLImageViewR
                android:id="@+id/nice_iv0"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/hand"
                app:corner_radius="20dp" />

            <co.baselib.widget.MLImageViewR
                android:id="@+id/nice_iv1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/hand"
                app:border_color="#FF7F24"
                app:border_width="2dp"
                app:corner_radius="20dp" />

            <co.baselib.widget.MLImageViewR
                android:id="@+id/nice_iv2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/hand"
                app:border_color="#FF7F24"
                app:border_width="2dp"
                app:radius_btm_left="10dp"
                app:radius_btm_right="60dp"
                app:radius_top_left="60dp"
                app:radius_top_right="10dp" />

            <co.baselib.widget.MLImageViewR
                android:id="@+id/nice_iv3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/hand"
                app:is_circle="true" />

            <co.baselib.widget.MLImageViewR
                android:id="@+id/nice_iv4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/hand"
                app:border_color="#FF7F24"
                app:border_width="4dp"
                app:is_circle="true" />


            <co.baselib.widget.MLImageViewR
                android:id="@+id/nice_iv5"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/hand"
                app:border_color="#008B45"
                app:border_width="2dp"
                app:corner_radius="20dp"
                app:inner_border_color="#FF7F24"
                app:inner_border_width="4dp"
                app:is_circle="true" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>