<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/input_icon_re"
            android:layout_width="24dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/input_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <EditText
            android:id="@+id/re_edit"
            style="@style/login_edittext"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/intut_icon_re_p"
            android:layout_toRightOf="@+id/input_icon_re"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <RelativeLayout
            android:id="@+id/intut_icon_re_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <RelativeLayout
                android:id="@+id/password_icon"
                style="@style/icon_re"
                android:layout_marginRight="5dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/clear_edit"
                    style="@style/img_icon"
                    android:src="@drawable/emotionstore_progresscancelbtn" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_password_hidden"
                style="@style/icon_re"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/password_icon">

                <ImageView
                    android:id="@+id/iv_password_hidden"
                    style="@style/img_icon"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/blank" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>