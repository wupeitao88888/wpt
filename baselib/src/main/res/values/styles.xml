<resources>

    <style name="PgDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/pg_bar</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>




    <style name="icon_re">

        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="img_icon">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
    </style>

    <style name="login_edittext">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">#474646</item>
        <item name="android:textColorHint">#c6c6c6</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">#00000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>


    </style>





</resources>
