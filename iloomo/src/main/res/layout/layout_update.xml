<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/titleimg"
            android:layout_width="match_parent"
            android:layout_height="117dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/rocket_bottom">

            <ScrollView
                android:id="@+id/title_scr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38dp"
                    android:layout_marginRight="38dp"
                    android:paddingBottom="18dp"
                    >


                    <RelativeLayout
                        android:id="@+id/content_re"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/versionname"
                            style="@style/textview525252_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text=""
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/versionname"
                            android:layout_marginTop="12dp"
                            android:gravity="left"
                            android:maxLines="10"
                            android:text=""
                            android:textColor="@color/black_3"
                            android:ellipsize="end"
                            android:textSize="10sp" />
                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/content_re"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal"
                      >

                        <TextView
                            android:id="@+id/affirm"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="23dp"
                            android:layout_weight="6"
                            android:background="@drawable/btn_radius60_stroke_3b9ff7_selector"
                            android:gravity="center"
                            android:text="稍后更新"
                            android:textColor="#3B9FF7"
                            android:textSize="14sp" />


                        <TextView
                            android:id="@+id/cancel"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_weight="5"
                            android:gravity="center"
                            android:text="立即更新"
                            android:background="@drawable/updata_btn_radius_selector"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>